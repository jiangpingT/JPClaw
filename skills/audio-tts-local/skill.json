{
  "name": "audio-tts",
  "description": "文字转语音 (Text-to-Speech)。支持OpenAI和Google TTS，可生成多种语言和声音的语音文件。",
  "version": "1.0.0",
  "input_schema": {
    "type": "object",
    "properties": {
      "text": {
        "type": "string",
        "description": "要转换为语音的文本内容"
      },
      "voice": {
        "type": "string",
        "description": "语音选项 (OpenAI: alloy/echo/fable/onyx/nova/shimmer; Google: zh-CN-Neural2-A等)"
      },
      "language": {
        "type": "string",
        "description": "语言代码 (zh/en/ja等)"
      },
      "speed": {
        "type": "number",
        "description": "语速 (0.25-4.0)"
      },
      "format": {
        "type": "string",
        "description": "输出格式 (mp3/opus/aac/flac/wav)"
      },
      "provider": {
        "type": "string",
        "description": "提供商 (openai/google)"
      },
      "filename": {
        "type": "string",
        "description": "输出文件路径"
      }
    },
    "required": ["text"]
  }
}
