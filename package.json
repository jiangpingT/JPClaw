{
  "name": "jpclaw",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "bin": {
    "jpclaw": "./bin/jpclaw.js",
    "jpchat": "./bin/jpchat.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/js/cli/index.ts",
    "start": "tsx src/js/cli/index.ts",
    "restart": "./scripts/service-manager.sh restart",
    "stop": "./scripts/service-manager.sh stop",
    "force-restart": "./scripts/service-manager.sh restart",
    "status": "./scripts/service-manager.sh status",
    "logs": "tail -f log/gateway.log 2>/dev/null || echo 'Log file not found'",
    "manual": "./scripts/service-manager.sh manual",
    "health": "curl -s http://localhost:3000/health 2>/dev/null || echo 'Service not responding'",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'lint placeholder'",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "benchmark": "tsx src/js/benchmark/runner.ts",
    "cleanup": "node -e \"console.log('Running cleanup tasks...'); require('fs').rmSync('log/old', {recursive: true, force: true}); console.log('Cleanup completed.')\"",
    "migrate": "echo 'No migrations to run'"
  },
  "dependencies": {
    "@mariozechner/pi-agent-core": "^0.52.6",
    "@picovoice/porcupine-node": "^3.0.6",
    "@picovoice/pvrecorder-node": "^1.2.8",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.5",
    "global-agent": "^3.0.0",
    "https-proxy-agent": "^7.0.6",
    "node-telegram-bot-api": "^0.67.0",
    "opencc-js": "^1.0.5",
    "playwright": "^1.58.2",
    "socks-proxy-agent": "^8.0.5",
    "ws": "^8.18.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@types/node-telegram-bot-api": "^0.64.13",
    "@types/ws": "^8.5.12",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^1.3.1"
  }
}
